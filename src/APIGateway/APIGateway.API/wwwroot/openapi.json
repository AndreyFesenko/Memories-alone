{
  "openapi": "3.0.1",
  "info": {
    "title": "Memories â€“ Unified API",
    "version": "1.1.0",
    "description": "Gateway spec combining microservices: Identity, MemoryArchive, Profile, Notification, AccessControl, AuditLogging"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local Gateway"
    }
  ],
  "tags": [
    { "name": "Identity" },
    { "name": "MemoryArchive" },
    { "name": "Profile" },
    { "name": "Notification" },
    { "name": "AccessControl" },
    { "name": "AuditLogging" },
    { "name": "System" }
  ],
  "security": [ { "Bearer": [] } ],
  "paths": {
    "/health/live": {
      "get": {
        "tags": [ "System" ],
        "summary": "Gateway liveness",
        "security": [],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/health/ready": {
      "get": {
        "tags": [ "System" ],
        "summary": "Gateway readiness",
        "security": [],
        "responses": { "200": { "description": "OK" } }
      }
    },

    /* ---------------- Identity ---------------- */

    "/identity/register": {
      "post": {
        "tags": [ "Identity" ],
        "summary": "Create a new user",
        "security": [],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/RegisterRequest" } } }
        },
        "responses": {
          "201": {
            "description": "Created (returns JWT)",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/JwtResponse" } } }
          },
          "409": { "description": "User already exists" }
        }
      }
    },
    "/identity/login": {
      "post": {
        "tags": [ "Identity" ],
        "summary": "User login (returns JWT)",
        "security": [],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LoginRequest" } } }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/JwtResponse" } } }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/identity/refresh": {
      "post": {
        "tags": [ "Identity" ],
        "summary": "Refresh JWT",
        "security": [],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/RefreshRequest" } } }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/JwtResponse" } } }
          }
        }
      }
    },
    "/identity/me": {
      "get": {
        "tags": [ "Identity" ],
        "summary": "Get current user profile (from token)",
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" }
        }
      }
    },

    /* --------------- MemoryArchive --------------- */

    "/memory/api/memory": {
      "post": {
        "tags": [ "MemoryArchive" ],
        "summary": "CreateMemory (multipart)",
        "requestBody": {
          "required": true,
          "content": { "multipart/form-data": { "schema": { "$ref": "#/components/schemas/CreateMemoryForm" } } }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/MemoryDto" } } }
          },
          "400": { "description": "Validation error" }
        }
      }
    },

    "/memory/api/memory/{id}": {
      "put": {
        "tags": [ "MemoryArchive" ],
        "summary": "UpdateMemory (title/description/accessLevel/tags)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UpdateMemoryRequest" } } }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/MemoryDto" } } }
          }
        }
      },
      "delete": {
        "tags": [ "MemoryArchive" ],
        "summary": "DeleteMemory",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": { "204": { "description": "Deleted" } }
      }
    },

    "/memory/api/memory/{id}/media": {
      "post": {
        "tags": [ "MemoryArchive" ],
        "summary": "UploadMedia (add another file to memory)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": { "multipart/form-data": { "schema": { "$ref": "#/components/schemas/UploadMediaForm" } } }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/MemoryDto" } } }
          }
        }
      }
    },

    "/memory/api/memory/{id}/media/{mediaId}": {
      "put": {
        "tags": [ "MemoryArchive" ],
        "summary": "UpdateMediaFile (e.g., change fileName/mediaType)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "mediaId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UpdateMediaRequest" } } }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/MemoryDto" } } }
          }
        }
      },
      "delete": {
        "tags": [ "MemoryArchive" ],
        "summary": "DeleteMediaFile",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "mediaId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/MemoryDto" } } }
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Provide JWT as: Bearer {token}"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "required": [ "username", "password" ],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "required": [ "username", "password", "email" ],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" },
          "email": {
            "type": "string",
            "format": "email"
          },
          "displayName": { "type": "string" }
        }
      },
      "RefreshRequest": {
        "type": "object",
        "required": [ "refreshToken" ],
        "properties": { "refreshToken": { "type": "string" } }
      },
      "JwtResponse": {
        "type": "object",
        "properties": {
          "accessToken": { "type": "string" },
          "refreshToken": { "type": "string" },
          "expiresAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },

      "CreateMemoryForm": {
        "type": "object",
        "required": [ "OwnerId", "Title", "Description", "MediaType", "File" ],
        "properties": {
          "OwnerId": { "type": "string" },
          "Title": { "type": "string" },
          "Description": { "type": "string" },
          "MediaType": {
            "type": "string",
            "enum": [ "Image", "Video", "Audio", "Document" ]
          },
          "AccessLevel": {
            "type": "string",
            "enum": [ "Private", "Public", "FriendsOnly" ],
            "default": "Private"
          },
          "Tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "File": {
            "type": "string",
            "format": "binary"
          }
        }
      },
      "UploadMediaForm": {
        "type": "object",
        "required": [ "MediaType", "File" ],
        "properties": {
          "MediaType": {
            "type": "string",
            "enum": [ "Image", "Video", "Audio", "Document" ]
          },
          "File": {
            "type": "string",
            "format": "binary"
          },
          "FileName": { "type": "string" }
        }
      },
      "UpdateMemoryRequest": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "accessLevel": {
            "type": "string",
            "enum": [ "Private", "Public", "FriendsOnly" ]
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "UpdateMediaRequest": {
        "type": "object",
        "properties": {
          "fileName": { "type": "string" },
          "mediaType": {
            "type": "string",
            "enum": [ "Image", "Video", "Audio", "Document" ]
          }
        }
      },

      "MediaFileDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "memoryId": {
            "type": "string",
            "format": "uuid"
          }, 
          "fileName": { "type": "string" },
          "url": { "type": "string" },
          "mediaType": { "type": "string" },
          "uploadedAt": {
            "type": "string",
            "format": "date-time"
          }, 
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "MemoryDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "ownerId": {
            "type": "string",
            "format": "uuid"
          },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "accessLevel": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "mediaFiles": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/MediaFileDto" }
          },
          "mediaCount": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    }
  }
}
