{
    "ReverseProxy": {
        "Routes": {
            "identity": {
                "ClusterId": "identityCluster",
                "Match": { "Path": "/identity/{**catch-all}" },
                "Transforms": [ { "PathRemovePrefix": "/identity" } ]
            },
            "memory": {
                "ClusterId": "memoryCluster",
                "Match": { "Path": "/memory/{**catch-all}" },
                "Transforms": [ { "PathRemovePrefix": "/memory" } ]
            },
            "profile": {
                "ClusterId": "profileCluster",
                "Match": { "Path": "/profile/{**catch-all}" },
                "Transforms": [ { "PathRemovePrefix": "/profile" } ]
            }
        },
        "Clusters": {
            "identityCluster": {
                "Destinations": {
                    "d1": { "Address": "https://identity-service-xxxx.onrender.com/" }
                }
            },
            "memoryCluster": {
                "Destinations": {
                    "d1": { "Address": "https://memory-service-xxxx.onrender.com/" }
                }
            },
            "profileCluster": {
                "Destinations": {
                    "d1": { "Address": "https://profile-service-xxxx.onrender.com/" }
                }
            }
        }
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://0.0.0.0:8080"
            }
        }
    }
}
